<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp!</h1>
            <p> View our handpicked campgrounds from all over the world.</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new" role="button">Add new CampGround</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
           <h3> Our most popular campgrounds</h3> 
        </div>        
    </div>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <img class="img-thumbnail" src="<%= campground.image %>" width="304" height="236">
            <h4><%= campground.name %></h4>
            <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
                    More Info
                </a>
            </p>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
